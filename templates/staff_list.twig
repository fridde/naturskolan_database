{% set headers, entity_class = DATA.headers, DATA.entity_class %}

<div class="card">
    <div class="card-header">
        <h1>
            <button class="btn btn-link card-title" type="button" data-toggle="collapse" data-target="#staff-card">
                <i class="fas fa-angle-double-right"></i>
                <i class="fas fa-angle-double-left"></i>
                <span>Personal på {{ DATA.school_name }}</span>
            </button>
        </h1>
    </div>
    <div id="staff-card" class="collapse show" data-parent="#school-accordion">
        <div class="card-body">

            <table class="table table-responsive table-striped editable" data-entity="{{ entity_class }}">
                <thead>
                <tr>
                    {% for header in headers %}
                        {% if header not in DATA.invisible_headers %}
                            <th>
                                {{- header -}}
                            </th>
                        {% endif %}
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for user in staff -%}
                    {%  set user_id = user.id  %} {% if user_id == 217 %}{%  set user_id = "#jwr4"  %} {% endif %}
                    <tr data-id="{{ user_id }}"{% if user_id is empty %} hidden {%- endif -%} >
                   {# <tr data-id="{{ user.id }}"{% if user.id is empty %} hidden {%- endif -%} > #}
                        <td>
                            <input type="text" name="FirstName" placeholder="Förnamn" value="{{ user.FirstName }}">
                        </td>
                        <td>
                            <input type="text" name="LastName" placeholder="Efternamn" value="{{ user.LastName }}">
                        </td>
                        <td>
                            <input class="has-tooltip" type="text" name="Mobil" placeholder="Mobilnummer"
                                   value="{{ user.Mobil }}"
                                   size="15">
                        </td>
                        <td>
                            <input type="text" name="Mail" placeholder="Mejladdress" value="{{ user.Mail }}">
                        </td>
                        {% if 'Acronym' not in DATA.invisible_headers %}
                            <td>
                                <input type="text" name="Acronym" placeholder="Acronym" value="{{ user.Acronym }}"
                                       size="4">
                            </td>
                        {% endif %}
                    </tr>
                {%- endfor %}
                </tbody>
            </table>
            <div class="container">
            <button type="button" class="add-row-btn btn btn-primary float-left">Lägg till person</button>
                <span class="float-right"> <a href="remove/{{ DATA.school_id }}">Ta bort en person</a> </span>
            </div>
        </div>
    </div>
</div>





