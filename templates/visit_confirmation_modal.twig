{%- extends "user_area.twig" -%}

{%- set visit_label = DATA.visit_label -%}
{%- block toolbar -%}{%- endblock -%}
{% block modals %}
    <div id="visit-confirmation-modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">
                        <span>&times</span>
                    </button>
                    <h4 class="modal-title">Besök bekräftad!</h4>
                </div>
                <div class="modal-body">
                    Ditt besök på {{ DATA.visit_label }} är bekräftad. Tack!
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary go-to-groups" data-url="{{ getGroupsPageUrl(DATA.school_id) }}">Till skolans grupper</button>

                </div>
            </div>
        </div>
    </div>

{%- endblock -%}
