{%- extends "user_area.twig" -%}
{% block password_modal %}

<div id="login-modal" class="modal fade" tabindex="-1" role="dialog" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
                <h4 class="modal-title">Ange ditt lösenord</h4>
            </div>
            <div class="modal-body">
                <input type="text" name="password" placeholder="Lösenord">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Glömt ditt lösenord?</button>
                <button class="btn btn-primary" id="login_modal_submit">Logga in</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
